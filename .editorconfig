root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 99
tab_width = 4
trim_trailing_whitespace = true
ij_continuation_indent_size = 8
# For docstrings and comments.
ij_visual_guides = 72

[{*.h,*.hpp,*.cpp}]
indent_size = 2
tab_width = 2
ij_continuation_indent_size = 4

[*.yml]
indent_size = 2

[*.md]
max_line_length = 72